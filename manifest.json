{
  "name": "GottaGo",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Get the status of your GottaGo directly in your Browser",
  "icons": {
	"16": "gottago16.png",
	"48": "gottago48.png",
	"128": "gottago128.png"
  },
  "browser_action": {
    "default_icon": "gottago16.png",
    "default_popup": "configure.html"
  },
  "background": {"page": "background.html"},
  "permissions": [
	"http://gottago.ch/", "http://busstop.ch.azdev.nine.ch/",
    "notifications"
  ],
  "web_accessible_resources": [
    "gottago48.png"
  ]
}